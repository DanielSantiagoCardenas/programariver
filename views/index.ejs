<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tesorería River Plate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/img/river-logo.png" alt="River Plate" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/usuarios">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/eventos">Eventos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/movimientos">Movimientos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/partidos">Partidos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/proximos-partidos">Próximos Partidos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">Últimos Eventos</h2>
                        <div class="list-group">
                            <% eventos.slice(0, 5).forEach(function(evento) { %>
                                <a href="/eventos" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1"><%= evento.nombre %></h5>
                                        <small><%= new Date(evento.fecha).toLocaleDateString() %></small>
                                    </div>
                                    <p class="mb-1">Valor: $<%= evento.valorTotal %></p>
                                    <small>Participantes: <%= evento.participantes.length %></small>
                                </a>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Acciones Rápidas</h2>
                        <div class="d-grid gap-2">
                            <a href="/usuarios" class="btn btn-primary">Gestionar Usuarios</a>
                            <a href="/eventos" class="btn btn-primary">Gestionar Eventos</a>
                            <a href="/movimientos" class="btn btn-primary">Gestionar Movimientos</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 